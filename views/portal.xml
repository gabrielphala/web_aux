<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="beneficiary_list">
    <t t-call="portal.portal_layout">
      <div style="display: flex; justify-content: space-between; margin-top: 20px;">
        <h1>Your Beneficiaries</h1>
        <a href="/new/beneficiary"><button>Add beneficiary</button></a>
      </div>
      <t t-call="portal.portal_table">
        <thead>
          <tr class="active">
            <th>Name</th>
            <th>Mobile</th>
            <th>City</th>
            <th>Country</th>
          </tr>
        </thead>
        <tbody>
          <t t-foreach="beneficiaries" t-as="beneficiary">
            <tr>
              <td><t t-out="beneficiary.name"/></td>
              <td><t t-out="beneficiary.mobile"/></td>
              <td><t t-out="beneficiary.city"/></td>
              <td><t t-out="beneficiary.country"/></td>
            </tr>
          </t>
        </tbody>
      </t>
    </t>
  </template>

  <template id="new_beneficiary">
    <t t-call="portal.portal_layout">
      <form method="POST" style="margin-top: 30px;">
        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
        <div style="display: flex; margin-top: 8px; align-items; center;">
          <label for="name" style="min-width: 120px; display: block; margin-right: 10px;">Name</label>
          <input type="text" style="border: 1px solid #eee; border-radius: 4px; background-color: #fff; padding: 8px 14px;" name="name" id="name"/>
        </div>
        
        <div style="display: flex; margin-top: 8px; align-items; center;">
          <label for="mobile" style="min-width: 120px;display: block; margin-right: 10px;">Mobile</label>
          <input type="text" style="border: 1px solid #eee; border-radius: 4px; background-color: #fff; padding: 8px 14px;" name="mobile" id="mobile"/>
        </div>

        <div style="display: flex; margin-top: 8px; align-items; center;">
          <label for="city" style="min-width: 120px;display: block; margin-right: 10px;">City</label>
          <input type="text" style="border: 1px solid #eee; border-radius: 4px; background-color: #fff; padding: 8px 14px;" name="city" id="city"/>
        </div>

        <div style="display: flex; margin-top: 8px; align-items; center;">
          <label for="country" style="min-width: 120px;display: block; margin-right: 10px;">Country</label>
          <input type="text" style="border: 1px solid #eee; border-radius: 4px; background-color: #fff; padding: 8px 14px;" name="country" id="country"/>
        </div>

        <button style="margin-top: 40px; padding: 8px 14px; border-radius: 4px; border: none;">Add beneficiary</button>
      </form>
    </t>
  </template>

  <template id="portal_breadcrumbs" inherit_id="portal.portal_breadcrumbs">
    <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
      <li t-if="page_name == 'beneficiaries'" class="breadcrumb-item">Beneficiaries</li>
      <li t-if="page_name == 'new_beneficiary'" class="breadcrumb-item">New Beneficiary</li>
    </xpath>
  </template>
</odoo>